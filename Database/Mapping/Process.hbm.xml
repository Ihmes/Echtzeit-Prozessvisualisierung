<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Database" namespace="Database.Domain">
  <class name="Process">
    <id name="Id">
      <generator class="guid" />
    </id>
    <property name="Name" not-null="true">
      <column name="Name" unique-key="ProcessName"/>
    </property>
    <property name="Description" not-null="true"/>
    <many-to-one name="Project" column="ProjectId" />
    <bag name="ProcessSteps" table="Process_ProcessStep" cascade="save-update" lazy="false">
      <key column ="ProcessId" />
      <many-to-many class="ProcessStep" column="ProcessStepId" />
    </bag>
  </class>
</hibernate-mapping>
