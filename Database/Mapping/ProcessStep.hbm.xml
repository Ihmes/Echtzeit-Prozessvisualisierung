<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Database" namespace="Database.Domain">
  <class name="ProcessStep">
    <id name="Id">
      <generator class="guid" />
    </id>
    <property name="Name" not-null="true"/>
    <property name="Description" not-null="false"/>
    <property name="Step" not-null="true"/>
    <property name="ElementName" not-null="true"/>
    <property name="Type" not-null="true"/>
    <property name="Program" not-null="true"/>
    <property name="Window" not-null="true" />
    <property name="Parent" not-null="true" />
    <bag name="Processes" table="Process_ProcessStep" cascade="save-update" lazy="false">
      <key column ="ProcessStepId" />
      <many-to-many class="Process" column="ProcessId" />
    </bag>
  </class>
</hibernate-mapping>